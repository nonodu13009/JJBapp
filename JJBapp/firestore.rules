rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Règles pour les profils utilisateurs
    match /users/{userId}/profile/{document=**} {
      // Seul l'utilisateur propriétaire peut lire et écrire son profil
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Règles pour les autres collections (à étendre selon les besoins)
    match /users/{userId}/{collection}/{document=**} {
      // Seul l'utilisateur propriétaire peut accéder à ses données
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
